// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Dotfiles Development",
	// Use Debian bookworm base image
	"image": "mcr.microsoft.com/devcontainers/base:bookworm@sha256:23fa69fed758b7927c60061317d73baf7d66b9fca5c344e80bce3a940b229af0",
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers-extra/features/mise:1@sha256:5c389ab1e3c8e44e5e0ff119f6868d54dbb781bc860bd8587dc66209cb8c4a8c": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2@sha256:7f32d985aac6929b4f37cf8a0bdb9196473e9e192281a3d708207a70633f83df": {
			"version": "latest",
			"enableNonRootDocker": "true"
		},
		"ghcr.io/devcontainers/features/git:1@sha256:f24645e64ad39a596131a50ec96f7d5cf7a2a87544cce772dd4b7182a233e98a": {},
		"ghcr.io/devcontainers/features/github-cli:1@sha256:1ad1ec1a806cc9926c84ca5b147427bba03b97e14e91f9df89af83726039ecaf": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"bungcip.better-toml",
				"eamodio.gitlens",
				"jetmartin.bats",
				"mkhl.shfmt",
				"ms-vscode.vscode-json",
				"streetsidesoftware.code-spell-checker",
				"timonwong.shellcheck",
				"yzhang.markdown-all-in-one"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.fixAll": "explicit",
					"source.organizeImports": "explicit"
				},
				"shellcheck.enable": true,
				"shellcheck.run": "onSave",
				"shfmt.config": {
					"indent": 2,
					"binaryNextLine": false,
					"switchCaseIndent": false,
					"spaceRedirects": false,
					"keepPadding": false,
					"minify": false,
					"simplify": false
				},
				"files.associations": {
					"*.bats": "shellscript"
				},
				"editor.rulers": [
					80
				],
				"editor.wordWrap": "bounded",
				"editor.wordWrapColumn": 100
			}
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
	// Run the install script and setup development tools after container creation
	"postCreateCommand": "./install.sh && mise trust --yes && ./bin/setup"
}