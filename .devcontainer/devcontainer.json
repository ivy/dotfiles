// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Dotfiles Development",
	// Use Debian bookworm base image
	"image": "mcr.microsoft.com/devcontainers/base:bookworm@sha256:15143a8c806afb8db57ae2c92876c112d7a6a1ced31cd7aa8b414201782757a4",
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers-extra/features/mise:1@sha256:5c389ab1e3c8e44e5e0ff119f6868d54dbb781bc860bd8587dc66209cb8c4a8c": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2@sha256:445e84b0c213225bfdae977a72b4125f65e38eadcd49616dae04f1af24aa122d": {
			"version": "latest",
			"enableNonRootDocker": "true"
		},
		"ghcr.io/devcontainers/features/git:1@sha256:27905dc196c01f77d6ba8709cb82eeaf330b3b108772e2f02d1cd0d826de1251": {},
		"ghcr.io/devcontainers/features/github-cli:1@sha256:d22f50b70ed75339b4eed1ba9ecde3a1791f90e88d37936517e3bace0bbad671": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"bungcip.better-toml",
				"eamodio.gitlens",
				"jetmartin.bats",
				"mkhl.shfmt",
				"ms-vscode.vscode-json",
				"streetsidesoftware.code-spell-checker",
				"timonwong.shellcheck",
				"yzhang.markdown-all-in-one"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.fixAll": "explicit",
					"source.organizeImports": "explicit"
				},
				"shellcheck.enable": true,
				"shellcheck.run": "onSave",
				"shfmt.config": {
					"indent": 2,
					"binaryNextLine": false,
					"switchCaseIndent": false,
					"spaceRedirects": false,
					"keepPadding": false,
					"minify": false,
					"simplify": false
				},
				"files.associations": {
					"*.bats": "shellscript"
				},
				"editor.rulers": [
					80
				],
				"editor.wordWrap": "bounded",
				"editor.wordWrapColumn": 100
			}
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
	// Run the install script and setup development tools after container creation
	"postCreateCommand": "./install.sh && mise trust --yes && ./bin/setup"
}