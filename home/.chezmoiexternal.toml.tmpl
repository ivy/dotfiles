{{ if lookPath "zsh" }}
# Oh-My-Zsh external configuration
# Only install if zsh is available in the system PATH
[".oh-my-zsh"]
    type = "archive"
    url = "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "24h"

# Zsh Autosuggestions plugin - speed-optimized (tarball is fastest)
[".config/zsh/plugins/zsh-autosuggestions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-autosuggestions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"  # Weekly updates for stability

# Zsh Syntax Highlighting plugin - speed-optimized (tarball is fastest)
[".config/zsh/plugins/zsh-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"  # Weekly updates for stability
{{ end }}

# Tmux configuration external
# Clone gpakosz/.tmux configuration repository
[".tmux"]
    type = "git-repo"
    url = "https://github.com/gpakosz/.tmux.git"
    refreshPeriod = "24h"