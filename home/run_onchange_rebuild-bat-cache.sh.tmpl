#!/bin/bash

# bat themes hash: {{ include ".chezmoiexternal.toml.tmpl" | sha256sum }}

[ -n "${DEBUG:-}" ] && set -o xtrace
set -o errexit
set -o nounset

# Only run if bat is available
if ! command -v bat >/dev/null 2>&1; then
    echo "bat not found, skipping cache rebuild"
    exit 0
fi

echo "Rebuilding bat cache for new themes..."

# Rebuild bat's cache to include new themes
bat cache --build

echo "bat cache rebuild complete"